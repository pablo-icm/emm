	journal = {Journal of Hazardous Materials},
	author = {Pereira-García, Carla and del Amo, Elena H. and Vigués, Núria and Rey-Velasco, Xavier and Rincón-Tomás, Blanca and Pérez-Cruz, Carla and Sanz-Sáez, Isabel and Hu, Haiyan and Bertilsson, Stefan and Pannier, Angela and Soltmann, Ulrich and Sánchez, Pablo and Acinas, Silvia G. and Bravo, Andrea G. and Alonso-Sáez, Laura and Sánchez, Olga},
