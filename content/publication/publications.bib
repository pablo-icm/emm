	urldate = {2024-06-18},
	journal = {Ecology and Evolution},
	author = {Puente-Sánchez, Fernando and Macías-Pérez, Luis Alberto and Campbell, Karley L. and Royo-Llonch, Marta and Balagué, Vanessa and Sánchez, Pablo and Tamames, Javier and Mundy, Christopher John and Pedrós-Alió, Carlos},
