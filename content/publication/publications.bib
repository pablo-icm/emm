	editor = {Brown, C Titus and Storz, Gisela and Brown, C Titus and Smith, Byron},
	month = mar,
	year = {2022},
	note = {Publisher: eLife Sciences Publications, Ltd},
	keywords = {bioinformatics, functional metageomics, gene clusters, microbial genomics, phylogenomics, unknown function},
	pages = {e67667},
